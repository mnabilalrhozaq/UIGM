# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2
max_line_length = 120

# HTML files
[*.{html,htm,twig}]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,conf,config}]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Composer files
[composer.{json,lock}]
indent_style = space
indent_size = 4

# Package files
[package.{json,lock}]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 4

# Git files
[.git*]
indent_style = space
indent_size = 4

# CI/CD files
[*.{travis,gitlab-ci,github}]
indent_style = space
indent_size = 2

# License and readme files
[{LICENSE,README,CHANGELOG,CONTRIBUTING}*]
max_line_length = 80