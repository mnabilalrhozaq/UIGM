#--------------------------------------------------------------------
# CACHE CONFIGURATION
#--------------------------------------------------------------------
cache.handler = 'file'
cache.backupHandler = 'dummy'
cache.file.storePath = 'writable/cache/'
cache.memcached.host = '127.0.0.1'
cache.memcached.port = 11211
cache.memcached.weight = 1
cache.redis.host = '127.0.0.1'
cache.redis.password = null
cache.redis.port = 6379
cache.redis.timeout = 0
cache.redis.database = 0

#--------------------------------------------------------------------
# CUSTOM APPLICATION SETTINGS
#--------------------------------------------------------------------

# System Settings
app.siteName = 'UIGM POLBAN System'
app.siteDescription = 'UI GreenMetric Management System - Politeknik Negeri Bandung'
app.adminEmail = 'admin@polban.ac.id'
app.supportEmail = 'support@polban.ac.id'

# File Upload Settings
upload.maxFileSize = 10485760
# 10MB in bytes (10 * 1024 * 1024)
upload.allowedTypes = 'jpg|jpeg|png|gif|pdf|doc|docx|xls|xlsx'
upload.uploadPath = 'writable/uploads/'

# Pagination Settings
pagination.perPage = 20
pagination.maxPerPage = 100

# Security Settings
security.sessionTimeout = 7200
# 2 hours in seconds
security.maxLoginAttempts = 5
security.lockoutTime = 900
# 15 minutes in seconds

# Notification Settings
notification.enableEmail = false
notification.enableSMS = false
notification.retentionDays = 30

# Report Settings
report.defaultFormat = 'pdf'
report.maxRecords = 10000
report.cacheDuration = 3600
# 1 hour in seconds

# API Settings
api.rateLimit = 100
# requests per minute
api.version = 'v1'
api.timeout = 30
# seconds

# Backup Settings
backup.autoBackup = false
backup.backupInterval = 86400
# 24 hours in seconds
backup.retentionDays = 30
backup.backupPath = 'backup/'

#--------------------------------------------------------------------
# DEVELOPMENT SETTINGS (Remove in production)
#--------------------------------------------------------------------

# Debug Settings
debug.showErrorDetails = true
debug.logQueries = false
debug.logPerformance = false

# Testing Settings
testing.enabled = false
testing.mockData = false

