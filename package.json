{
    "name": "uigm-polban-system",
    "version": "1.0.0",
    "description": "UI GreenMetric Management System for Politeknik Negeri Bandung - Frontend Assets",
    "main": "public/index.php",
    "scripts": {
        "dev": "npm run watch",
        "build": "npm run build-css && npm run build-js",
        "build-css": "sass public/assets/scss:public/assets/css --style compressed",
        "build-js": "webpack --mode production",
        "watch": "npm run watch-css & npm run watch-js",
        "watch-css": "sass public/assets/scss:public/assets/css --watch",
        "watch-js": "webpack --mode development --watch",
        "lint": "eslint public/assets/js/**/*.js",
        "lint-fix": "eslint public/assets/js/**/*.js --fix",
        "optimize-images": "imagemin public/assets/images/**/* --out-dir=public/assets/images/optimized",
        "serve": "php spark serve --host=localhost --port=8080",
        "test-frontend": "jest",
        "clean": "rimraf public/assets/css/*.css public/assets/js/dist/*"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/polban/uigm-system.git"
    },
    "keywords": [
        "uigm",
        "greenmetric",
        "sustainability",
        "polban",
        "codeigniter",
        "dashboard",
        "management-system"
    ],
    "author": {
        "name": "POLBAN Development Team",
        "email": "dev@polban.ac.id",
        "url": "https://polban.ac.id"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/polban/uigm-system/issues"
    },
    "homepage": "https://github.com/polban/uigm-system#readme",
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^6.8.1",
        "eslint": "^8.52.0",
        "eslint-config-standard": "^17.1.0",
        "imagemin": "^8.0.1",
        "imagemin-cli": "^7.0.0",
        "jest": "^29.7.0",
        "mini-css-extract-plugin": "^2.7.6",
        "rimraf": "^5.0.5",
        "sass": "^1.69.5",
        "style-loader": "^3.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "bootstrap": "^5.3.2",
        "chart.js": "^4.4.0",
        "@fortawesome/fontawesome-free": "^6.4.2",
        "jquery": "^3.7.1",
        "datatables.net": "^1.13.6",
        "datatables.net-bs5": "^1.13.6",
        "sweetalert2": "^11.7.32",
        "moment": "^2.29.4",
        "axios": "^1.6.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testMatch": [
            "**/tests/frontend/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "public/assets/js/**/*.js",
            "!public/assets/js/vendor/**",
            "!public/assets/js/dist/**"
        ]
    },
    "eslintConfig": {
        "extends": [
            "standard"
        ],
        "env": {
            "browser": true,
            "jquery": true,
            "es6": true
        },
        "globals": {
            "Chart": "readonly",
            "Swal": "readonly",
            "moment": "readonly",
            "axios": "readonly"
        }
    }
}